- model_class = Platform
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-bordered
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @platforms.each do |platform|
      %tr
        %td= link_to platform.id, platform_path(platform)
        %td= platform.name
        %td= platform.description
        %td=l platform.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_platform_path(platform), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), platform_path(platform), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_platform_path, :class => 'btn btn-primary'
